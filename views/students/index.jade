extends ../head2

block body
    div.robust-content.content.container-fluid
      div.content-wrapper
        div.content-header.row
          //div(class="content-header-left col-md-6 col-xs-12")
            h3(class="content-header-title mb-0") Студенты
          div(class="content-header-lead col-xs-12 mt-1")
        .content-body
            section
                .row
                    .col-xs-12
                        .card
                            .card-header
                                h4.card-title Список студентов
                            .card-body.collapse.in
                                .card-block.card-dashboard
                                    //p.card-text.font-medium-1
                                        | В данном списке представлены все учебные группы.
                                        | Каждый контрольный вопрос имеет определенный тип: вопрос по реляционной алгебре или по исчислению на кортежах.
                                        | Также каждый вопрос относится к определенной базе данных, название которой оторажается в таблице.

                                    .row
                                        .col-md-6
                                            fieldset
                                                .input-group
                                                    input(type="text" class="form-control" placeholder="Поиск по названию" aria-label="Amount")
                                                    span.input-group-btn
                                                        button.btn.btn-tumblr(type="button")
                                                            i.icon-search5 
                                                            | Поиск
                                        .col-md-6
                                            .form-group
                                                button#create_student_btn.btn.btn-tumblr.btn-mid-width.mr-1.mb-1(type="button" data-toggle="modal" data-target="#create_student_modal") 
                                                    i.icon-plus3 
                                                    | Добавить новго студента
                                                //a.btn.btn-tumblr.btn-mid-width.mr-1.mb-1#copy_question(type="button" href="") 
                                                    i.icon-plus3 
                                                    | Cкопировать вопрос
                                    .row
                                        #students_table.col-md-12
                                            //include ./../parts/pagination


    div(class="modal fade text-xs-left" id="create_student_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true")
        div(class="modal-dialog" role="document")
            div(class="modal-content")
                .modal-header.bg-custom-blue-grey-2.white
                    button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                        span.white(aria-hidden="true") &times;
                    h4(class="modal-title" id="myModalLabel1") 
                        i.icon-database2 
                        | Добавление нового студента
                .modal-body
                    form#create_student_from.form-horizontal(novalidate data-backdrop="static")
                        .form-group.row
                            label.label-control.col-md-2 ФИО
                            .controls.col-md-10
                                input#name.form-control(type="text" name="name" required aria-invalid="false")
                                .help-block
                        .form-group.row
                            label.label-control.col-md-2 Телефон
                            .controls.col-md-10
                                input#phone.form-control(type="text" name="phone" required aria-invalid="false")
                                .help-block
                        .form-group.row
                            label.label-control.col-md-2 Почта
                            .controls.col-md-10
                                input#email.form-control(type="text" name="email" required aria-invalid="false")
                                .help-block
                        .form-group.row
                            label.label-control.col-md-2 Логин
                            .controls.col-md-10
                                input#login.form-control(type="text" name="login" required aria-invalid="false")
                                .help-block
                        .form-group.row
                            label.label-control.col-md-2 Пароль
                            .controls.col-md-10
                                input#password.form-control(type="text" name="password" required aria-invalid="false")
                                .help-block
                        .form-group.row
                            label.label-control.col-md-2(for="group_id") Группа
                            .controls.col-md-10
                                select.form-control#group_id(name="group_id" required aria-invalid="false" data-validation-required-message="Необходимо выбрать группу")
                                    option(value="")
                                    each group in groups
                                        option(value=group.id)= group.title 
                                .help-block

                .modal-footer
                    button#submit(type="submit" form="create_student_from" class="btn btn-success mr-1 ") Создать
                    button#reset(type="reset" form="create_student_form" class="btn btn-danger ") Отмена


block append footer

    script(src="/robust-assets/js/components/modal/components-modal.js" type="text/javascript")

    script(src="/robust-assets/js/plugins/forms/spinner/jquery.bootstrap-touchspin.js" type="text/javascript")
    script(src="/robust-assets/js/plugins/forms/validation/jqBootstrapValidation.js" type="text/javascript")
    script(src="/robust-assets/js/plugins/forms/icheck/icheck.min.js" type="text/javascript")
    script(src="/robust-assets/js/plugins/forms/toggle/bootstrap-switch.min.js" type="text/javascript")
    script(src="/robust-assets/js/plugins/forms/toggle/switchery.min.js" type="text/javascript")

    script(src="/robust-assets/js/components/forms/validation/form-validation.js" type="text/javascript")

    script(src="/js/pages/students/index.js" type="text/javascript")
    script(src="/js/pages/students/table.js" type="text/javascript")
