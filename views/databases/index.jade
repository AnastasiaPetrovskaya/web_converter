extends ../head2

block body
    div.robust-content.content.container-fluid
      div.content-wrapper
        div.content-header.row
          div(class="content-header-left col-md-6 col-xs-12")
            h3(class="content-header-title mb-0") Базы данных
          div(class="content-header-lead col-xs-12 mt-1")
        .content-body
            section#configuration
                .row
                    .col-xs-12
                        .card
                            .card-header
                                h4.card-title Список баз данных
                            .card-body.collapse.in
                                .card-block.card-dashboard
                                    p.card-text 
                                        | На данном календаре отмечены сроки сдачи всех контрольных мероприятий созданных преподавателем.
                                        | Также вы можете добавлять свои мероприятия, которые будут доступны только вам.
                                        | Для добавления нового мероприятия перетащите цветной блок из панели слева на необходимую дату в календаре,
                                        | после чего вы можете редактировать описание и временной промежуток, потянув за края блока.

                                    if (dbs.length === 0)
                                        p.text-muted.m-t-md.text-center Нет данных
                                    else
                                        table.table.table-striped.table-bordered.zero-configuration
                                            thead
                                                tr
                                                    th Название
                                                    th Примечание
                                                    th Тип
                                                    th Управление
                                            tbody
                                                each db in dbs
                                                    tr(data-id=db.id)
                                                        td #{db.title}
                                                        td
                                                            if (db.note)
                                                                =db.note
                                                            else
                                                                | -
                                                        td
                                                            if (db.type === "common")
                                                                span.label.label-primary Общий доступ
                                                            else if (db.type === "private")
                                                                span.label.label-info Персональный доступ
                                                            else if (db.type === "test")
                                                                span.label.label-warning Тестовая база
                                                            else if (db.type === "control")
                                                                span.label.label-danger База для контрольных мероприятий
                                                            else
                                                                span.label.label-danger Не задан
                                                        td
                                                            .btn-toolbar(role="toolbar")
                                                                a.btn.btn-icon.btn-primary.btn-sm(style="min-width:3.5rem" href="/databases/" + db.id data-toggle="tooltip" title data-original-title="Подробная информация")
                                                                    i.icon-info2
                                                                a.btn.btn-icon.btn-info.btn-sm(style="min-width:3.5rem" href="/databases/" + db.id data-toggle="tooltip" title data-original-title="Схема базы данных")
                                                                    i.icon-sitemap
                                                                a.btn.btn-icon.btn-success.btn-sm(style="min-width:3.5rem" href="/databases/" + db.id data-toggle="tooltip" title data-original-title="Данные таблиц")
                                                                    //i.icon-database2
                                                                    //i.icon-file-text-o
                                                                    i.icon-table3
                                                                a.btn.btn-icon.btn-warning.btn-sm(style="min-width:3.5rem" href="/databases/" + db.id data-toggle="tooltip" title data-original-title="SQL запрос")
                                                                    //i.icon-trash-o
                                                                    i(style="font-weight:bold") SQL
                                                                    //span.avatar.avatar-online
                                                                        img(src="img/sql.svg")
                                                                a.btn.btn-icon.btn-danger.btn-sm(style="min-width:3.5rem" href="/databases/" + db.id data-toggle="tooltip" title data-original-title="Удаление базы данных")
                                                                    //i.icon-trash-o
                                                                    i.icon-trash2

