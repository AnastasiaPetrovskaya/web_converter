extends ../head2

block body
    div.robust-content.content.container-fluid
      div.content-wrapper
        div.content-header.row
          div(class="content-header-left col-md-6 col-xs-12")
            h3(class="content-header-title mb-0") Учебные группы
          div(class="content-header-lead col-xs-12 mt-1")
        .content-body
            section
                .row
                    .col-xs-12
                        .card
                            .card-header
                                h4.card-title Список Учебных групп
                            .card-body.collapse.in
                                .card-block.card-dashboard
                                    //p.card-text.font-medium-1
                                        | В данном списке представлены все учебные группы.
                                        | Каждый контрольный вопрос имеет определенный тип: вопрос по реляционной алгебре или по исчислению на кортежах.
                                        | Также каждый вопрос относится к определенной базе данных, название которой оторажается в таблице.

                                    .row
                                        .col-md-6
                                            fieldset
                                                .input-group
                                                    input(type="text" class="form-control" placeholder="Поиск по названию" aria-label="Amount")
                                                    span.input-group-btn
                                                        button.btn.btn-tumblr(type="button")
                                                            i.icon-search5 
                                                            | Поиск
                                        .col-md-6
                                            .form-group
                                                button#create_group_btn.btn.btn-tumblr.btn-mid-width.mr-1.mb-1(type="button" data-toggle="modal" data-target="#create_group_modal") 
                                                    i.icon-plus3 
                                                    | Добавить новую группу
                                                //a.btn.btn-tumblr.btn-mid-width.mr-1.mb-1#copy_question(type="button" href="") 
                                                    i.icon-plus3 
                                                    | Cкопировать вопрос
                                    .row
                                        #groups_table.col-md-12
                                            //include ./../parts/pagination


    div(class="modal fade text-xs-left" id="create_group_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true")
        div(class="modal-dialog" role="document")
            div(class="modal-content")
                .modal-header.bg-custom-blue-grey-2.white
                    button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                        span.white(aria-hidden="true") &times;
                    h4(class="modal-title" id="myModalLabel1") 
                        i.icon-database2 
                        | Добавление новой группы
                .modal-body
                    form#create_group_from.form-horizontal(novalidate data-backdrop="static")
                        .form-group
                            h6 Введите название группы
                            .controls
                                input#title.form-control(type="text" name="title" required aria-invalid="false")
                                .help-block
                        .form-group
                            h6 Введите название кафедры
                            .controls
                                input#department.form-control(type="text" name="department" required aria-invalid="false")
                                .help-block
                        .form-group
                            h6 Введите специальность (опционально)
                            .controls
                                textarea#specialty.form-control(name="specialty" required aria-invalid="false")
                                .help-block

                .modal-footer
                    button#submit(type="submit" form="create_group_from" class="btn btn-success mr-1 ") Создать
                    button#reset(type="reset" form="create_group_form" class="btn btn-danger ") Отмена


block append footer

    script(src="/robust-assets/js/components/modal/components-modal.js" type="text/javascript")

    script(src="/robust-assets/js/plugins/forms/spinner/jquery.bootstrap-touchspin.js" type="text/javascript")
    script(src="/robust-assets/js/plugins/forms/validation/jqBootstrapValidation.js" type="text/javascript")
    script(src="/robust-assets/js/plugins/forms/icheck/icheck.min.js" type="text/javascript")
    script(src="/robust-assets/js/plugins/forms/toggle/bootstrap-switch.min.js" type="text/javascript")
    script(src="/robust-assets/js/plugins/forms/toggle/switchery.min.js" type="text/javascript")

    script(src="/robust-assets/js/components/forms/validation/form-validation.js" type="text/javascript")

    script(src="/js/pages/groups/index.js" type="text/javascript")
    script(src="/js/pages/groups/table.js" type="text/javascript")
